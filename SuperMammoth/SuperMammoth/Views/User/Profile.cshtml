@model SuperMammoth.Models.RegisterModel

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Profile</h1>

<div>
    <h4>Here you can check and edit your details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            First Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Last Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            Username:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2">
            E-mail:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Payment Method:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentMethodId)
        </dd>
    </dl>
</div>
<div>
    <div>
        @Html.ActionLink("Edit", "Edit") |
        @Html.ActionLink("My Reservations", "GetReservationByUser", "Reservations", Model)
    </div>
</div>
