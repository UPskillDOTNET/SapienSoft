@model SuperMammoth.Models.RegisterModel

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-10">
        <div class="card">
            <div class="card-body">
                <h5 class="card-header">Profile</h5>
                <p class="card-text">
                    <dl class="row">
                        <dt class="col-sm-2">
                            First Name:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FirstName)
                        </dd>
                        <dt class="col-sm-2">
                            Last Name:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.LastName)
                        </dd>
                        <dt class="col-sm-2">
                            Username:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Username)
                        </dd>
                        <dt class="col-sm-2">
                            E-mail:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            Payment Method:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PaymentMethodId)
                        </dd>
                    </dl>
                </p>
            </div>
        </div>
    </div>
    <div class="col-sm-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Edit Profile</h5>
                <p class="card-text">
                    @Html.ActionLink("Edit", "Edit")
                </p>                
            </div>
        </div>
    </div>
</div>
