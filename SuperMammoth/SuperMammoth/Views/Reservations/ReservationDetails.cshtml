@model SuperMammoth.Models.ReservationModel
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.5.0/css/ol.css" type="text/css">
    <style>
        .map {
            height: 400px;
            width: 100%;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.5.0/build/ol.js"></script>
    @{
       ViewData["Title"] = "ReservationDetails";
    }

    <h1>ReservationDetails</h1>

    <div>
        <h4>ReservationModel</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Start)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Start.ToString("dd/MM/yyyy"))
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.End)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.End.ToString("dd/MM/yyyy"))
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Value)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Value.ToString("C"))
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Locator)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Locator)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.QrCode)
            </dt>
            <dd class="col-sm-10">
                <img src="@Url.Content(Model.QrCode)" alt="Qr Code" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Park.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Park.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Longitude)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Longitude)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Latitude)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Latitude)
            </dd>
        </dl>
    </div>

    <div id="map" class="map"></div>
    <script type="text/javascript">
            const longLat = [@Model.Longitude,@Model.Latitude]
        
        var map = new ol.Map({
            target: 'map',
            layers: [
                new ol.layer.Tile({
                    source: new ol.source.OSM()
                })
            ],
            view: new ol.View({
                center: ol.proj.fromLonLat(longLat),
                zoom: 5
            })
        });
    </script>



    <div>
        @Html.ActionLink("Sub-Rent Reservation", "MakeAvailableToRent", new { /* id = Model.PrimaryKey */ }) |
        @Html.ActionLink("Cancel Reservation", "Edit", new { /* id = Model.PrimaryKey */ }) |
        @Html.ActionLink("Re-send E-mail", "ReSend", new { id = Model.Id }) |
        <a asp-action="UserReservations">Back to List</a>
    </div>
