@model IEnumerable<SuperMammoth.Models.ReservationModel>

@{
    ViewData["Title"] = "UserReservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Reservations</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Park.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QrCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableToRent)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>
            <td>
                @Html.Raw(item.DateCreated.ToString("dd/MM/yyyy"))
            </td>
            <td>
                @Html.Raw(item.Value.ToString("C"))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Park.Name)
            </td>
            <td>
                <img src="@Url.Content(item.QrCode)" alt="Qr Code" />
            </td>
            <td>
                @Html.Raw(item.AvailableToRent.ToString())
                @if (item.AvailableToRent == false)
                {
                    @Html.ActionLink("Make Available To Rent", "ConfirmAvailableToRent", item) 
                    
}
            </td>
        </tr>
}
    </tbody>
</table>
