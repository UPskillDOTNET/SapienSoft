@model IEnumerable<SuperMammoth.Models.ReservationModel>

@{
    ViewData["Title"] = "UserReservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Reservations</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Park.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableToRent)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (DateTime.Now < item.Start)
            {
        <tr>
            <td>
                @Html.Raw(item.Start.ToString("dddd, dd MMMM yyyy. HH:mm"))
            </td>
            <td>
                @Html.Raw(item.End.ToString("dddd, dd MMMM yyyy. HH:mm"))
            </td>
            <td>
                @Html.Raw(item.DateCreated.ToString("dddd, dd MMMM yyyy. HH:mm"))
            </td>
            <td>
                @Html.Raw(item.Value.ToString("C"))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Park.Name)
            </td>
            <td>
                @Html.Raw(item.AvailableToRent.ToString())
                @if (item.AvailableToRent == false)
                {
                    @Html.ActionLink("Make Available To Rent", "makeAvailableToRent", new { Id = item.Id })
                }
            </td>
            <td>
                @Html.ActionLink("Details", "ReservationDetails", new { id = item.Id })
            </td>
        </tr>
            }
            else if (DateTime.Now > item.Start && DateTime.Now < item.End)
            {
    <tr class="table-success">
        
        <td>
            @Html.Raw(item.Start.ToString("dddd, dd MMMM yyyy. HH:mm"))
        </td>
        <td>
            @Html.Raw(item.End.ToString("dddd, dd MMMM yyyy. HH:mm"))
        </td>
        <td>
            @Html.Raw(item.End.ToString("dddd, dd MMMM yyyy. HH:mm"))
        </td>
        <td>
            @Html.Raw(item.Value.ToString("C"))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Locator)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Park.Name)
        </td>
        <td>
            @Html.ActionLink("Details", "ReservationDetails", new { id = item.Id })
        </td>
        <td>
            Reserva em processo
        </td>
    </tr>
            }
            else
            {
    <tr class="table-info">
        
        <td>
            @Html.Raw(item.Start.ToString("dddd, dd MMMM yyyy. HH:mm"))
        </td>
        <td>
            @Html.Raw(item.End.ToString("dddd, dd MMMM yyyy. HH:mm"))
        </td>
        <td>
            @Html.Raw(item.DateCreated.ToString("dddd, dd MMMM yyyy. HH:mm"))
        </td>
        <td>
            @Html.Raw(item.Value.ToString("C"))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Locator)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Park.Name)
        </td>
        <td>
            @Html.ActionLink("Details", "ReservationDetails", new { id = item.Id })
        </td>
        <td>
            Reserva terminada
        </td>
    </tr>
            }

        }
    </tbody>
</table>
