@model SuperMammoth.Models.ReservationDTOModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Confirm</h1>

<div>
    <h4>Check the details below, and confirm your reservation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Begins in:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Start)
        </dd>
        <dt class = "col-sm-2">
            Ends in:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.End)
        </dd>
        <dt class = "col-sm-2">
            Created in: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class = "col-sm-2">
            Total price:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Value) €
        </dd>
        <dt class = "col-sm-2">
            Parking Spot: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Locator)
        </dd>
        <dt class = "col-sm-2">
            Park:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParkName)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Reserve", "MakeReservation", "Reservations", Model)
</div>
